<Window x:Class="FieldRenderer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="WindowLoaded" Closed="WindowClosed">
    <DockPanel>
        <TextBlock Visibility="Collapsed" Name="FieldVector" DockPanel.Dock="Left" Width="250" />
        <Viewbox Stretch="Uniform">
            <StackPanel Orientation="Horizontal">
                <Image Name="FieldImage" x:FieldModifier="private" />
                <Image Name="GradientImage" />
                
            </StackPanel>
        </Viewbox>
    </DockPanel>
</Window>
